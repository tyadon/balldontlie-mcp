    "api",
    "nba",
    "nfl",
    "mlb",
    "epl",
    "nhl",
    "balldontlie"
  ],
  "author": "BALLDONTLIE",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "express": "^4.18.0",
    "zod": "^3.22.0",
    "dd-trace": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
