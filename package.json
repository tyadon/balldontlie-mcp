{
  "name": "@balldontlie/mcp-server",
  "version": "1.0.0",
  "description": "MCP server for BALLDONTLIE sports API endpoints",
  "main": "dist/web-server.js",
  "type": "module",
  "bin": {
    "balldontlie-mcp-server": "./dist/web-server.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/web-server.js",
    "start": "node dist/web-server.js",
